<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/view_visible"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <View
        android:id="@+id/view_field_bg"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:background="#0000FF"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view_visible" />


    <Button
        android:id="@+id/btn_field_1"
        android:layout_width="80dp"
        android:layout_height="0dp"
        android:background="@null"
        android:text="Field 1"
        android:textColor="#FFF"
        app:layout_constraintBottom_toBottomOf="@id/view_field_bg"
        app:layout_constraintLeft_toLeftOf="@id/view_field_bg"
        app:layout_constraintTop_toTopOf="@id/view_field_bg" />

    <Button
        android:id="@+id/btn_visible"
        android:layout_width="80dp"
        android:layout_height="0dp"
        android:background="@null"
        android:text="visible"
        android:textColor="#FFF"
        app:layout_constraintBottom_toBottomOf="@id/view_field_bg"
        app:layout_constraintLeft_toRightOf="@id/btn_field_1"
        app:layout_constraintTop_toTopOf="@id/view_field_bg" />


    <Button
        android:id="@+id/btn_bg"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view_field_bg" />

</android.support.constraint.ConstraintLayout>